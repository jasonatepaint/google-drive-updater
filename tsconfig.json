{
  "compileOnSave" : true,
  "compilerOptions" : {
	"module" : "commonjs",
	"moduleResolution" : "node",
	"typeRoots": [
	  "node_modules/@types"
	],
	"types": [
	  "node"
	],
	"paths": {
	  "src/": ["src/"]
	},
	"target" : "es5",
	"sourceMap" : true
  },
  "include" : [
	"src/**/*"
  ],
  "exclude" : [
	"node_modules"
  ],
  "filesGlob": [
	"./src//.ts",
	"./test//.ts",
	"./typings/index.d.ts",
	"./custom_typings//.d.ts",
	"./node_modules/@types//.d.ts"
  ]
}